<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
<Properties>
    <Property name="catalina-base" >$${sys:catalina.base}</Property>
</Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] %c{1.} - %msg%n" 
/>
        </Console>
        <RollingFile name="RollingFile"
            fileName="${catalina-base}/logs/timeline_logs/timeline.log"
            filePattern="${catalina-base}/logs/timeline_logs/$${date:yyyy-MM}/logs-%d{dd-MM-yyyy}-%i.log.gz">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <AsyncLogger name="your.main.package" level="info" additivity="false">
            <AppenderRef ref="RollingFile" />
        </AsyncLogger>
        <Root level="info" additivity="false">
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</Configuration>